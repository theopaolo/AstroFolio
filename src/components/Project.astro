---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="border-b border-black hover:bg-black hover:text-white">
	<a class="px-4" href={href} target="_blank">
		<h3 class="text-2xl">
			{title}
		</h3>
		<p class="text-base">
			{body}
		</p>
	</a>
</li>