---
import { Image } from '@astrojs/image/components';

export interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
}

const { href, title, body, image} = Astro.props;
---

<li class="border-b border-black hover:bg-stone-900 hover:text-white p-1">
	<a class="project items-center" href={href} target="_blank">
		<div class="cover mr-4" >
			<Image src={image} height={100} alt={title} aspectRatio="16:9"/>
		</div>
		<div class="description py-8">
			<h3 class="text-2xl">
				{title}
			</h3>
			<p class="text-base">
				{body}
			</p>
		</div>
	</a>
</li>